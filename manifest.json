{
  "manifest_version": 2,
  "name": "Useful Page Loading",
  "version": "0.2",
  "description": "Show interesting facts while page is loading",
  "icons": {
    "16": "imgs/icon_16x16.png",
    "48": "imgs/icon_48x48.png",
    "128": "imgs/icon_128x128.png"
  },
  "author": "7633766@gmail.com",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["index.js"],
      "css": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    "imgs/gicon.svg",
    "imgs/more.svg",
    "imgs/settings.svg"
  ]
}
